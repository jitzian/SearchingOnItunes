<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_8"
    android:elevation="@dimen/dp_4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mImageViewArtistDetailArtWork"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/dp_8"
            android:importantForAccessibility="yes" />

        <LinearLayout
            android:id="@+id/mLinearLayoutArtistDetailDataContainerWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mTextViewArtistDetailArtistName"
                style="@style/detailCardViewArtistNameTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="yes"
                tools:text="This is the Artist Name" />

            <TextView
                android:id="@+id/mTextViewArtistDetailTrackName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Track Name" />

            <TextView
                android:id="@+id/mTextViewArtistDetailReleaseDate"
                style="@style/detailCardViewReleaseDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Release Date" />

            <TextView
                android:id="@+id/mTextViewArtistDetailPrimaryGenreName"
                style="@style/detailCardViewPrimaryGenreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Primary Genre Name" />

            <TextView
                android:id="@+id/mTextViewArtistDetailTrackPrice"
                style="@style/detailCardViewTrackPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Track Price" />

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>